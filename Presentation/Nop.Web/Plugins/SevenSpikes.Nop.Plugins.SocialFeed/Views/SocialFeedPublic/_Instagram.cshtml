@using System.Web.Mvc.Html
@using SevenSpikes.Nop.Plugins.SocialFeed.Enum
@using SevenSpikes.Nop.Plugins.SocialFeed.Helpers
@using SevenSpikes.Nop.Plugins.SocialFeed.Models.Public.SocialNetworks.Instagram
@using SevenSpikes.Nop.Plugins.SocialFeed.MVC

@model InstagramModel

@if (Model != null)
{
    @Html.Partial(ViewPathHelper.GetViewPath(ViewNames.ViewPublicSocialNetworkScripts), SocialNetworkType.Instagram)

    <div class="feed-body">
        <div class="post-list-wrap">
            <ul class="post-list">
                @foreach (var media in Model.InstagramMedia)
                {
                    if (!string.IsNullOrEmpty(media.Link) &&
                        !string.IsNullOrEmpty(media.MediaUrl))
                    {
                        <li class="post-item">
                            <a class="post-link" href="@media.Link" target="_blank">
                                <img class="post-img" src="@media.MediaUrl" />
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

}